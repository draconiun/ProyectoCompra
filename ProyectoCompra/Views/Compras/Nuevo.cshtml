@model ProyectoCompra.Models.Compra

@{
    ViewBag.Title = "Nuevo";
}

<script type="text/javascript">
    $(document).ready(function () {

        $("#LibroID").change(function () {
            alert("Entro");
            var parametros = new Object();
            parametros.LibroID = $("#LibroID").val();
            $.ajax({
                type: "POST",
                data: JSON.stringify(parametros),
                url: "@Url.Action("ListarLibro", "Compras")",
                contentType: 'application/json;',
                dataType: "json",
                async: true,
                success: function (result) {
                    alert(result.Success);
                    alert(result.resultado);
                    $("#Detalle").html(result.resultado);
                }
        })
    });

    });
</script>



<h2>Nuevo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Compra</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.LibroID, "LibroID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LibroID", String.Empty)
                @Html.ValidationMessageFor(model => model.LibroID)
            </div>
        </div>
        
        <div class="form-group" id="Detalle">

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidad)
                @Html.ValidationMessageFor(model => model.cantidad)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="Nuevo" value="Nuevo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-1.10.2.min.js")
}


